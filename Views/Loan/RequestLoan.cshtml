@model WebApplication1.Models.Loan

@{
    ViewBag.Title = "RequestLoan";
}

<h2>Apply for Loan</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

<form id="loanRequestForm" action="@Url.Action("RequestLoan", "Bank")" method="post">
    <label for="amount">Loan Amount:</label>
    <input type="number" id="amount" name="amount" min="1" max="10000" required />
    <span id="amountError" style="color:red; display:none;">Amount must be less than or equal to 10,000.</span>
    <br />

    <label for="durationInYears">Duration (years):</label>
    <select id="durationInYears" name="durationInYears">
        <option value="1">1 Year</option>
        <option value="3">3 Years</option>
        <option value="5">5 Years</option>
    </select>
    <br />

    <button type="submit">Request Loan</button>
</form>

<p>
    <a href="@Url.Action("Dashboard", "Account")">Transfer Money</a> |
    <a href="@Url.Action("Logout", "Account")">Logout</a> |
</p>

